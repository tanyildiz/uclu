<div class="col-lg-9 col-md-9 col-sm-6 col-xs-12">

<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">image</th>
      <th scope="col">Price</th>
      <th scope="col">Tags</th>
      <th scope="col">Category</th>
    </tr>
  </thead>
  <tbody>

  <% @products.each do |p| %>
  <tr>
      <th scope="row"><%=p.id%></th>
      <td><%=p.name%></td>
      <td><%=p.description%></td>
      <td><%=p.image %></td>
      <td><%=p.price %></td>
      <td><%= link_to p.tag.name, tag_path(:id => p.tag.id) %></td>
      <td><%= link_to p.category.name, category_path(:id => p.category.id) %></td>
      <td><%= link_to 'Edit', edit_product_path(p), class:'btn btn-warning'%></td>
    </tr>
    <% end %>

  </tbody>
</table>
<%= link_to "Ok", root_path, class:'btn btn-primary' %>
<%= link_to "New", new_product_path, class:'btn btn-secondary' %>

</div>